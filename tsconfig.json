{
  "compilerOptions": {
    "moduleResolution": "node",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "jsx": "react",
    "noImplicitAny": true,
    "lib": ["DOM", "DOM.Iterable", "ESNext", "ScriptHost"],
    "target": "es5",
    "allowJs": false,
    "skipLibCheck": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    ".cache",
    "dist",
    "lib"
  ]
}
